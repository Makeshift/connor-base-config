{
  metadata: {
    parentPath: {
      doc: "The top-level package path (Automatically generated)",
      format: "String",
      default: "/"
    },
    package: {
      doc: "The package we're a part of (Automatically generated)",
      format: "String",
      default: "connor-base-config"
    },
    release: {
      doc: "The version of the package we're a part of (Automatically generated)",
      format: "String",
      default: "0.00"
    },
    stack: {
      doc: "The stack of packages working our way up from this config to the top parent (Automatically generated)",
      format: "Object",
      default: {}
    }
  },
  environment: {
    level: {
      doc: "What promotion level are we running in?",
      format: [
        "development",
        "production"
      ],
      default: "production",
      env: "ENV_LEVEL"
    },
    region: {
      doc: "What region or datacentre are we in?",
      format: "String",
      default: "NO_REGION_SET",
      env: "region"
    },
    proxy: {
      enabled: {
        doc: "Should we use a proxy? (Automatically enabled if the HTTP_PROXY or HTTPS_PROXY env vars are supplied)",
        format: "Boolean",
        default: false,
        env: "PROXY_ENABLED"
      },
      address: {
        doc: "What is the proxy URL?",
        format: "url",
        default: "http://proxy:3128",
        env: "HTTP_PROXY"
      }
    }
  }
}